@model List<UserWithRolesViewModel>

@{
    ViewData["Title"] = "Користувачі";
}

<div class="container py-5">
    <div class="card shadow p-4">
        <h2 class="text-center mb-4 text-dark">Список користувачів</h2>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Повне ім'я</th>
                        <th>Email</th>
                        <th>Роль</th>
                        <th class="text-center">Дії</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.RoleName</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-success btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i> Змінити
                                </a>
                                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-info-circle"></i> Деталі
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
