@model IEnumerable<ProjectDto>
@using Microsoft.AspNetCore.Identity
@using TaskManager.dto
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Projects";
    var isAdmin = User.IsInRole("Admin");
}

<div class="container py-5 bg-dark text-light min-vh-100">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">Projects</h1>
        <a asp-action="Create" class="btn btn-primary">
            + Create Project
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-secondary text-center">
            No projects found.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var project in Model)
            {
                <div class="col">
                    <div class="card bg-secondary text-white h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@project.Title</h5>
                            <p class="card-text">@project.Description</p>
                            <p class="card-text">
                                <small class="text-light">Created: @project.CreatedAt.ToString("yyyy-MM-dd")</small><br />
                                <small class="text-light">By: @project.CreatedByUserName</small>
                            </p>
                            <div class="mt-auto">
                                <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-outline-light btn-sm me-2 mb-2">
                                    Details
                                </a>

                                @if (project.CreatedByUserId.ToString() == UserManager.GetUserId(User) || isAdmin)
                                {
                                    <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-warning btn-sm me-2 mb-2">
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger btn-sm mb-2">
                                        Delete
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
