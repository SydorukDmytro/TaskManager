@model UserWithRolesViewModel

@{
    ViewData["Title"] = "Редагування користувача";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="max-width: 600px; width: 100%;">
        <h2 class="text-center mb-4 text-dark">Редагування користувача</h2>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-medium text-dark">Повне ім'я:</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-medium text-dark">Пошта:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RoleName" class="form-label fw-medium text-dark">Роль:</label>
                <select asp-for="RoleName" asp-items="Model.AvailableRoles" class="form-select"></select>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-success">Зберегти</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Скасувати</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
