@model TaskManager.Models.LoginViewModel
@{
    ViewData["Title"] = "Вхід";
}

<div class="login-container">
    <h2 class="mb-4 text-center text-dark" style="font-family: 'Poppins', sans-serif; font-weight: 700;">Вхід</h2>

    <form asp-action="Login" method="post" novalidate>
        <div class="form-group mb-3">
            <label asp-for="Email" class="fw-semibold text-dark"></label>
            <input asp-for="Email" class="form-control" autocomplete="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="fw-semibold text-dark"></label>
            <input asp-for="Password" type="password" class="form-control" autocomplete="current-password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label text-dark"></label>
        </div>

        <button type="submit" class="btn btn-primary w-100 fw-bold" style="font-family: 'Poppins', sans-serif;">Увійти</button>
    </form>
</div>

<style>
    .login-container {
        background: #fff;
        padding: 2.5rem 2rem;
        border-radius: 1rem;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 420px;
        font-family: 'Open Sans', sans-serif;
        margin: auto; /* щоб центрувати по горизонталі */
    }
</style>
