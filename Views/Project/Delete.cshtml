@using TaskManager.dto
@model ProjectDto

@{
    ViewData["Title"] = "Підтвердження видалення";
}

<div class="container py-5 bg-dark text-light min-vh-100">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-danger bg-gradient text-white shadow-lg border-0">
                <div class="card-body p-5">

                    <h2 class="card-title text-center fw-bold mb-4">
                        ⚠️ Ви дійсно хочете видалити проєкт?
                    </h2>

                    <div class="mb-3">
                        <p class="fs-5"><strong>🔖 Назва:</strong> @Model.Title</p>
                        <p class="fs-5"><strong>📝 Опис:</strong> @Model.Description</p>
                        <p class="mb-1"><small><strong>📅 Дата створення:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</small></p>
                        <p><small><strong>👤 Автор:</strong> @Model.CreatedByUserName</small></p>
                    </div>

                    <hr class="border-light" />

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <button type="submit" class="btn btn-light text-danger fw-semibold px-4">
                                <i class="bi bi-trash-fill me-2"></i> Так, видалити
                            </button>

                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light px-4">
                                🚫 Скасувати
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
